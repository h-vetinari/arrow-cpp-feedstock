Subject: [PATCH 2/2] avoid patching by moving relevant assertion into
 gcs_server fixture

---
 python/pyarrow/tests/conftest.py | 4 ++++
 python/pyarrow/tests/test_fs.py  | 7 ++++---
 2 files changed, 8 insertions(+), 3 deletions(-)

diff --git a/python/pyarrow/tests/conftest.py b/python/pyarrow/tests/conftest.py
index a06ac9209..e434bca2c 100644
--- a/python/pyarrow/tests/conftest.py
+++ b/python/pyarrow/tests/conftest.py
@@ -184,8 +184,12 @@ def gcs_server():
     proc = None
     try:
         proc = subprocess.Popen(args, env=env)
+        # Make sure the server is alive.
+        assert proc.poll() is None
     except OSError as e:
         pytest.skip(f"Command {args} failed to execute: {e}")
+    except AssertionError as e:
+        pytest.skip(f"Command {args} did not start server successfully: {e}")
     else:
         yield {
             'connection': ('localhost', port),
diff --git a/python/pyarrow/tests/test_fs.py b/python/pyarrow/tests/test_fs.py
index 945114454..af420affb 100644
--- a/python/pyarrow/tests/test_fs.py
+++ b/python/pyarrow/tests/test_fs.py
@@ -207,8 +207,6 @@ def gcsfs(request, gcs_server):
 
     host, port = gcs_server['connection']
     bucket = 'pyarrow-filesystem/'
-    # Make sure the server is alive.
-    assert gcs_server['process'].poll() is None
 
     fs = GcsFileSystem(
         endpoint_override=f'{host}:{port}',
@@ -217,7 +215,10 @@ def gcsfs(request, gcs_server):
         anonymous=True,
         retry_time_limit=timedelta(seconds=45)
     )
-    fs.create_dir(bucket)
+    try:
+        fs.create_dir(bucket)
+    except OSError as e:
+        pytest.skip(f"Command {args} failed to execute: {e}")
 
     yield dict(
         fs=fs,
